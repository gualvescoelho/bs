<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Cadastrar Sugestão"
             x:Class="bs.ViewModels.CadastrarSugestao">
    <StackLayout>
        <Entry x:Name="txtNome" Placeholder="Nome do Colaborador"
               Margin="10,0,10,0"></Entry>
        <Picker Title="Departamento:" 
                    x:Name="departamentoPicker"
                    ItemDisplayBinding="{Binding Nome}"
                    Margin="10,0,10,0">
        </Picker>
        <Entry x:Name="txtSugestao" Placeholder="Sugestão" Margin="10,0,10,0"></Entry>
        <Entry x:Name="txtJustificativa" Placeholder="Justificativa" Margin="10,0,10,0"></Entry>
        <Button Clicked="Button_Clicked" Text="Salvar"
                Margin="10,0,10,0"/>
    </StackLayout>
</ContentPage>