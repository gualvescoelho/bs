<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bs.ViewModels.Cadastrarsugestao">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cadastrar Situação:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtNome" Text="Nome do Colaborador"></Entry>
            <Picker x:Name="departamentoPicker" Title="Selecione um item" 
                ItemsSource="{Binding Departamentos}"
                ItemDisplayBinding="{Binding Nome}"
                SelectedItem="{Binding departamentoSelected}" ></Picker>
            <Entry x:Name="txtsugestao" Text="Situação"></Entry>
            <Entry x:Name="txtJustificativa" Text="Justificativa"></Entry>
            <Button Clicked="Button_Clicked" Text="Salvar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>